[core]
  excludesfile = ~/.gitignore

[user]
  name  = David Cuddeback
  email = "david.cuddeback@gmail.com"

[color]
  branch      = auto
  diff        = auto
  interactive = auto
  status      = auto

[rebase]
  autosquash = true

[merge]
  tool = vimdiff

[alias]
  plog    = "log --pretty=oneline"
  active  = "branch --contains 'HEAD@{2 weeks ago}'"
  tree    = log --graph --pretty=oneline --abbrev-commit --decorate --color
